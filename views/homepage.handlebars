<!-- Loop over each object in the projects array -->
{{#each pevents as |pevent| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/project/{{pevent.id}}">{{pevent.name}}</a>
    </h2>
    <p>hosted by: {{pevent.user.name}} on {{format_date pevent.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>event description:
      {{pevent.description}}
      {{pevent.date_of_event}}
    </p>
  </div>
</div>
{{/each}}
