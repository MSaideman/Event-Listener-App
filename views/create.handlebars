<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Project:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">event name:</label>
        <input class="form-input" type="text" id="title" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">event description:</label>
        <textarea class="form-input" id="content" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" id="create-btn" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if pevents.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each pevents as |pevent|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{pevent.id}}">{{pevent.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button type="submit" id="delete-btn" class="btn btn-sm btn-danger" data-id="{{pevent.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


<script src="./js/profile.js"></script>
